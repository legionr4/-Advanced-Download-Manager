{
    "manifest_version": 3,
    "name": "Advanced Download Manager Integration",
    "description": "Integrates with the Advanced Download Manager desktop application.",
    "version": "1.2",
    "permissions": [
        "contextMenus",
        "downloads",
        "nativeMessaging",
        "cookies",
        "storage"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "options_page": "options.html",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}